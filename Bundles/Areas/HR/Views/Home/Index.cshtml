@model List<Bundles.Models.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/HR/Views/Shared/_LayoutHR.cshtml";
}

<header class="bg-primary text-center py-5 mb-4">
    <div class="container">
        <h1 class="font-weight-light text-white">Employees</h1>
    </div>
</header>

<!-- Page Content -->
<div class="container">
    <div class="row">
        <!-- Team Member 1 -->
        @foreach (var employee in Model)
        {
            <a class="col-xl-3 col-md-6 mb-4" href="/Employee/Details/@employee.EmployeeID">

                <div class="card border-0 shadow">
                    <img src="@employee.PhotoPath" class="card-img-top" alt="...">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-0">@employee.TitleOfCourtesy @employee.FirstName @employee.LastName</h5>
                        <div class="card-text text-black-50">@employee.Title</div>
                    </div>
                </div>

            </a>

        }

    </div>
    <!-- /.row -->
    <a href="/Employee/AddEmployee" class="btn btn-success">Çalışan Ekle</a>
</div>

